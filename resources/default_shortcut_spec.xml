<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>
  <skipIfNotSupported/>
  <programGroup defaultName="Tagerator"
                location="applications"/>

<!--
   - NOTE:
   - The manifest for Tagerator.jar specifies the classpath,
   - so we just have to java -jar the main jar file.
   -->
  <shortcut
    name="Tagerator"
    target="javaw"
    commandLine="-Xms64m -Xmx512m -jar &quot;$INSTALL_PATH\Tagerator.jar&quot;"
    workingDirectory="$INSTALL_PATH"
    description="This starts Tagerator"
    iconFile="$INSTALL_PATH\images\icons.ico"
    initialState="normal"
    programGroup="yes"
    desktop="yes"
    applications="no"
    startMenu="no"
    startup="no">
  </shortcut>
  
  <shortcut
	   name="Uninstall Tagerator"
	   programGroup="yes"
	   desktop="no"
	   applications="no"
	   startMenu="no"
	   startup="no"
	   target="java"
	   commandLine="-jar &quot;$INSTALL_PATH/Uninstaller/uninstaller.jar&quot;"
	   initialState="noShow"
	   iconFile="$INSTALL_PATH\images\uninstall.ico"
	   iconIndex="0"
	   workingDirectory=""
	   description="Tagerator uninstaller">
   </shortcut>
   
</shortcuts>
